  <% if current_user.fevorite_micropost?(micropost) %>
      <%= form_for(current_user.fevorites.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
          <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger' %>
      <% end %>
  <% else %>
      <%= form_for(current_user.fevorites.build) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
          <%= f.submit 'お気に入り登録', class: 'btn btn-primary' %>
      <% end %>
  <% end %>
